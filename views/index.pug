                div.factura-4th-section
                    table.factura-zona-table 
                        caption ZONA 
                        tr 
                            td #{data.zona}
                    table.factura-fv-table
                        caption FECHA VENCIMIENTO
                        tr 
                            td #{data.fecha_vencimiento}
                table.factura-oc-table
                    caption OTROS CONCEPTOS 
                        tr 
                            th Concepto
                            th Cant.
                            th Precio
                            th Importe
                        each detalle in data.detalle
                            if detalle.basico == "B"
                                tr 
                                    td #{detalle.descripcion_producto1}
                                    td #{detalle.cantidad}
                                    td #{detalle.precio}
                                    td #{detalle.importe}
                     
