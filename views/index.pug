    div
        div.factura-1rst-page 
            div#factura-section-container
                header.factura-template-header 
                    img(src='/img/factura-header.jpg')
            div.factura-tables-container 
                table        
                    tr
                        td.codigo-sistema-background  Codigo Sistema:
                        td #{data.id_contrato}
                    tr    
                        td RNC
                        td #{data.documento_identidad}
                    tr 
                        td Nombre
                        td #{data.nombre_cte}
                    tr 
                        td Direccion 
                        td #{data.direccion_cte}
                table 
                    tr 
                        td Tipo: 
                        td #{data.tipo_comp}
                    tr
                        td NCF: 
                        td #{data.ncf}
                    tr 
                        td Vencimiento 
                        td #{data.fecha_venc_ncf}
                    tr 
                        td Periodo 
                        td #{data.periodo}
                    tr 
                        td No.Factura 
                        td #{data.documento}
                table.factura-dsf-table
                    caption DETALLES SERVICIOS FACTURADOS
                    tr  
                        th Concepto
                        th Cant.
                        th Precio
                        th Importe 
                    each detalle in data.detalle
                        if detalle.basico == "A"
                            tr 
                                td #{detalle.descripcion_producto1}
                                td #{detalle.cantidad}
                                td #{detalle.precio}
                                td #{detalle.importe}
                table.factura-ddm-table
                    Caption.align-caption-right DATOS DE MEDICION
                    tr 
                        td Lectura Anterior
                        td #{data.lectura_anterior}
                        td Lectura Actual
                        td #{data.fecha_lectura}
                    tr 
                        td Serial 
                        td #{data.serial} 
                        td Consumo 
                        td #{data.consumo}
                    tr 
                        td Calibre 
                        td #{data.calibre}
                    tr 
                        td Marca 
                        td #{data.medidor}
                    tr  
                        td Tipo de Calculo 
                        td #{data.metodo}
                table.factura-ts-table
                    tr 
                        th 
                            span.squared-border A 
                        th TOTAL SERVICIO 
                        th #{data.monto_neto}
                table.factura-dds-table
                    caption.align-caption-right  DATOS DEL SERVICIO
                    tr  
                        td Codigo Proceso 
                        td #{data.codigo_proceso}
                    tr
                        td Codigo Inmueble 
                        td #{data.cod_inmueble}
                    tr 
                        td Uso 
                        td #{data.clase_servicio}
                    tr 
                        td Cupo BÃ¡sico (m3)
                        td
                    tr 
                        td Unidades 
                        td #{data.unidades}
                    tr 
                        td Tarifa 
                        td
